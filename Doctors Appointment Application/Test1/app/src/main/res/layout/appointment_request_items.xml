<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:id="@+id/appointment_request_cardView"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/ap_user_img_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/user_icon"

        />


    <TextView
        android:id="@+id/appointment_userName_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="140dp"
        android:outlineSpotShadowColor="#000"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="UserName"
        android:textColor="#111"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/pending_appointment_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="175dp"
        android:text="User Email Address"
        android:textColor="#111"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status(Pending)"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/pending_appointment_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#fff"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/appointment_request_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#fff"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/appointment_request_time"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="30dp"
        >

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/round_button_0"
        android:src="@drawable/ic_check_black_24dp"
        android:id="@+id/approve_btn"
        />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/gradient_round_button"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:id="@+id/reject_btn"
            />

    </LinearLayout>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_person_add_white_24dp"
        android:id="@+id/user_add_btn"
        />

</android.support.v7.widget.CardView>