<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/processed_cardView"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/ap_user_img_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/appointment0"

        />


    <TextView
        android:id="@+id/processed_appointment_userName_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="140dp"
        android:outlineSpotShadowColor="#000"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Appointment"
        android:textAllCaps="true"
        android:textColor="#111"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/processed_appointment_hospital_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="175dp"
        android:text="Hospital Address"
        android:textColor="#111"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status(Pending)"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/processed_appointment_status"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#fff"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:layout_marginRight="20dp"

            android:id="@+id/appointment_processed_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="#fff"
            android:layout_gravity="right"
            android:textSize="20dp"

            android:layout_marginRight="20dp"
            android:id="@+id/appointment_processed_time"/>


    </LinearLayout>




    <Button
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_gravity="bottom"
        android:background="@color/color3"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_detail_btn"
        android:text="View Detail"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        />


</android.support.v7.widget.CardView>