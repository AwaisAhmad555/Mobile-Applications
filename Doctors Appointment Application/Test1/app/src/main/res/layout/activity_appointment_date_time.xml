<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appointment_date_time">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar0"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/title_Appointment_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFF"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="30dp"
                android:text="Appointment" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user_icon"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/textView94"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Patient Name : " />

    <EditText
        android:id="@+id/appointment_user_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="none"
        android:hint="Patient Name"
        android:textColor="#000"
        android:editable="false"
        android:text=""
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/city_img"
        android:layout_marginBottom="40dp"
        />


    <TextView
        android:id="@+id/textView82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Enter Hospital/Clinic Name : " />

    <EditText
        android:id="@+id/Hospital_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:hint="    Hospital/Clinic Name"
        android:drawableLeft="@drawable/ic_local_hospital_black_24dp"
        android:textColor="#000"
        android:editable="true"
        android:text="" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Enter Hospital/Clinic Address : "
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/Hospital_Address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="none"
        android:hint="    Hospital/Clinic Address"
        android:drawableLeft="@drawable/ic_location_searching_black_24dp"
        android:textColor="#000"
        android:editable="false"
        android:text="" />

    <TextView
        android:id="@+id/textView81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Enter the City Name : "
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/Hospital_City_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="none"
        android:hint="    Hospital/Clinic City"
        android:drawableLeft="@drawable/ic_location_city_black_24dp"
        android:textColor="#000"
        android:editable="false"
        android:text="" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/date_img"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:id="@+id/textView99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Select Appointment Date : " />

    <EditText
        android:id="@+id/date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="none"
        android:hint="    Appointment Date for Patient"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:textColor="#000"
        android:editable="false"
        android:text="" />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:background="@color/color2"
        android:layout_marginRight="20dp"
        android:text="Select"
        android:textColor="#ffffff"
        android:layout_marginBottom="30dp"
        android:id="@+id/date_btn"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/time_img"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Select Appointment Time : " />

    <EditText
        android:id="@+id/time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="none"
        android:hint="    Appointment Time for Patient"
        android:drawableLeft="@drawable/ic_schedule_black_24dp"
        android:textColor="#000"
        android:editable="false"
        android:text="" />

    <Button
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:background="@color/color2"
        android:layout_marginRight="20dp"
        android:text="Select"
        android:textColor="#ffffff"
        android:layout_marginBottom="30dp"
        android:id="@+id/time_btn"
        />





    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:background="@color/color1"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:fontFamily="sans-serif-black"
        android:text="SUBMIT"
        android:id="@+id/Submit_dateTime_btn"
        android:layout_marginBottom="50dp"
        />

</LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>