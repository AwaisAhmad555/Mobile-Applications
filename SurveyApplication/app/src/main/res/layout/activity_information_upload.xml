<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".information_upload">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/survey1"
        android:id="@+id/logo_img"
        android:layout_centerHorizontal="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo_img"
        android:layout_marginTop="-10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="24dp"
                android:layout_marginTop="18dp"
                android:text="Name : "
                android:textColor="#000"
                android:textSize="14dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="114dp" />

            <EditText
                android:id="@+id/edit_name_text"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                android:text=""
                android:textColor="#000" />


            <TextView
                android:id="@+id/age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="24dp"
                android:layout_marginTop="70dp"
                android:text="Age : "
                android:textColor="#000"
                android:textSize="14dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="114dp" />

            <EditText
                android:id="@+id/username_age"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint=""
                android:inputType="number"
                android:text=""
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="70dp">

            <TextView
                android:id="@+id/latitude_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="24dp"
                android:layout_marginTop="0dp"
                android:text="Location(latitude) : "
                android:textColor="#000"
                android:textSize="14dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="114dp" />

                <TextView
                    android:id="@+id/longitude_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="0dp"
                    android:text="Location(longitude) : "
                    android:textColor="#000"
                    android:textSize="14dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="114dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="0dp">

            <EditText
                android:id="@+id/edit_latitude"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:hint=""
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="#000" />

                <EditText
                    android:id="@+id/edit_longitude"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textColor="#000" />

            </LinearLayout>

            <TextView
                android:id="@+id/environment_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="24dp"
                android:layout_marginTop="70dp"
                android:text="Nature Of Environment : "
                android:textColor="#000"
                android:textSize="14dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="114dp" />

            <EditText
                android:id="@+id/environment_edit"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                android:textColor="#000" />

            <TextView
                android:id="@+id/file_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="70dp"
                android:text="Recording sample : "
                android:textColor="#000"
                android:textSize="14dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="114dp" />

            <EditText
                android:id="@+id/file_name_edit"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#000" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_alignParentTop="false"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="80dp"
                android:text="UPLOAD"
                android:textSize="17sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@color/color2"
                android:layout_marginHorizontal="22dp"
                android:id="@+id/upload_btn">
            </Button>



        </LinearLayout>
    </ScrollView>



</RelativeLayout>