<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray shadow. -->
    <item
        android:left="3dp"
        android:top="5dp">

<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <gradient android:startColor="#000"
        android:endColor="#000"/>

    <corners android:radius="15dp"
        />

    <!--  <size android:height="80dp"
          android:width="80dp"/> -->

    <padding android:right="2dp"
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp"/>
</shape>

    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="1dp"
        android:right="1dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <gradient android:startColor="@color/color1"
                android:endColor="@color/color1"/>

            <corners android:radius="15dp"
                />

            <!--  <size android:height="80dp"
                  android:width="80dp"/> -->

            <padding android:right="2dp"
                android:left="2dp"
                android:top="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

</layer-list>
